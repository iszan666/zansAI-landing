---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sign In | ZansAI" description="Sign in to your ZansAI account">
  <div class="signin-page">
    <div class="signin-left">
      <a href="/" class="logo">
        <div class="logo-icon">⚡</div>
        <span>ZansAI</span>
      </a>
      
      <div class="signin-content">
        <h1>Welcome back</h1>
        <p class="subtitle">Sign in to your account to continue</p>
        
        <form class="signin-form">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="you@example.com" required>
          </div>
          
          <div class="form-group">
            <label for="password">
              Password
              <a href="/forgot-password" class="forgot-link">Forgot password?</a>
            </label>
            <input type="password" id="password" name="password" placeholder="••••••••" required>
          </div>
          
          <div class="form-group checkbox-group">
            <label class="checkbox-label">
              <input type="checkbox" name="remember">
              <span class="checkmark"></span>
              Remember me for 30 days
            </label>
          </div>
          
          <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
        
        <div class="divider">
          <span>or continue with</span>
        </div>
        
        <div class="social-buttons">
          <button class="btn btn-social">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </button>
          <button class="btn btn-social">
            <svg viewBox="0 0 24 24" width="20" height="20">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Google
          </button>
        </div>
        
        <p class="signup-link">
          Don't have an account? <a href="/get-started">Sign up for free</a>
        </p>
      </div>
      
      <p class="footer-text">© 2025 ZansAI Technologies Inc.</p>
    </div>
    
    <div class="signin-right">
      <div class="testimonial">
        <blockquote>
          "ZansAI has completely transformed how we deploy AI models. What used to take weeks now takes minutes."
        </blockquote>
        <div class="testimonial-author">
          <div class="author-avatar">JD</div>
          <div class="author-info">
            <strong>James Davidson</strong>
            <span>CTO at TechCorp</span>
          </div>
        </div>
      </div>
      
      <div class="stats-row">
        <div class="stat">
          <span class="stat-value">200+</span>
          <span class="stat-label">Enterprise Clients</span>
        </div>
        <div class="stat">
          <span class="stat-value">2.4B+</span>
          <span class="stat-label">Daily Requests</span>
        </div>
        <div class="stat">
          <span class="stat-value">140+</span>
          <span class="stat-label">Edge Locations</span>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .signin-page {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .signin-left {
    display: flex;
    flex-direction: column;
    padding: 2rem 4rem;
    background: #ffffff;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: #0f172a;
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 3rem;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
  }

  .signin-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 400px;
    width: 100%;
    margin: 0 auto;
  }

  h1 {
    font-size: 2rem;
    font-weight: 800;
    color: #0f172a;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #64748b;
    margin-bottom: 2rem;
  }

  .signin-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
  }

  .forgot-link {
    color: #6366f1;
    text-decoration: none;
    font-weight: 500;
  }

  .forgot-link:hover {
    text-decoration: underline;
  }

  .form-group input[type="email"],
  .form-group input[type="password"] {
    padding: 0.875rem 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    font-size: 1rem;
    transition: all 0.2s;
    background: #f8fafc;
  }

  .form-group input:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    background: white;
  }

  .checkbox-group {
    flex-direction: row;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: #64748b;
  }

  .checkbox-label input {
    width: 18px;
    height: 18px;
    accent-color: #6366f1;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.95rem;
    font-weight: 600;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(99, 102, 241, 0.3);
    margin-top: 0.5rem;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
  }

  .divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e2e8f0;
  }

  .divider span {
    font-size: 0.8rem;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .social-buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .btn-social {
    background: white;
    color: #374151;
    border: 1px solid #e2e8f0;
  }

  .btn-social:hover {
    background: #f8fafc;
    border-color: #d1d5db;
  }

  .signup-link {
    text-align: center;
    margin-top: 2rem;
    color: #64748b;
    font-size: 0.95rem;
  }

  .signup-link a {
    color: #6366f1;
    text-decoration: none;
    font-weight: 600;
  }

  .signup-link a:hover {
    text-decoration: underline;
  }

  .footer-text {
    font-size: 0.8rem;
    color: #94a3b8;
    margin-top: 2rem;
  }

  .signin-right {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .signin-right::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.3) 0%, transparent 70%);
    pointer-events: none;
  }

  .signin-right::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -30%;
    width: 80%;
    height: 80%;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.2) 0%, transparent 70%);
    pointer-events: none;
  }

  .testimonial {
    position: relative;
    z-index: 10;
    max-width: 500px;
    margin: 0 auto;
  }

  blockquote {
    font-size: 1.75rem;
    font-weight: 500;
    color: white;
    line-height: 1.5;
    margin: 0 0 2rem 0;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-info strong {
    color: white;
    font-weight: 600;
  }

  .author-info span {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }

  .stats-row {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    margin-top: 4rem;
    position: relative;
    z-index: 10;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
  }

  .stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 1024px) {
    .signin-page {
      grid-template-columns: 1fr;
    }

    .signin-right {
      display: none;
    }

    .signin-left {
      padding: 2rem;
    }
  }

  @media (max-width: 480px) {
    .social-buttons {
      grid-template-columns: 1fr;
    }
  }
</style>
