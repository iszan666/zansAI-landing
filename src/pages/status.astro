---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="System Status | ZansAI" description="Current system status and incident history">
  <Navbar />
  <main class="page-content">
    <div class="container">
      <div class="status-header">
        <div class="status-indicator big pulse"></div>
        <div class="status-text">
          <h1>All Systems Operational</h1>
          <p>Last updated: Just now</p>
        </div>
      </div>

      <div class="systems-grid">
        <div class="system-item">
          <div class="system-name">API API</div>
          <div class="status-badge operational">Operational</div>
        </div>
        <div class="system-item">
          <div class="system-name">Edge Network (Asia)</div>
          <div class="status-badge operational">Operational</div>
        </div>
        <div class="system-item">
          <div class="system-name">Edge Network (Europe)</div>
          <div class="status-badge operational">Operational</div>
        </div>
        <div class="system-item">
          <div class="system-name">Edge Network (Americas)</div>
          <div class="status-badge operational">Operational</div>
        </div>
        <div class="system-item">
          <div class="system-name">Dashboard</div>
          <div class="status-badge operational">Operational</div>
        </div>
        <div class="system-item">
          <div class="system-name">Model Inference</div>
          <div class="status-badge operational">Operational</div>
        </div>
      </div>

      <div class="incident-history">
        <h2>Past Incidents</h2>
        <div class="incident-list">
          <div class="incident-day">
            <h4>Jan 12, 2025</h4>
            <div class="incident-item">
              <span class="no-incidents">No incidents reported.</span>
            </div>
          </div>
          <div class="incident-day">
            <h4>Jan 11, 2025</h4>
            <div class="incident-item">
              <span class="no-incidents">No incidents reported.</span>
            </div>
          </div>
          <div class="incident-day">
            <h4>Jan 10, 2025</h4>
            <div class="incident-item">
              <span class="incident-title resolved">Resolved - API Latency Spikes</span>
              <p class="incident-desc">We experienced minor latency spikes in US-East region. Issue was resolved in 15 minutes.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .page-content {
    padding-top: 8rem;
    padding-bottom: 6rem;
    min-height: 80vh;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .status-header {
    background: #22c55e;
    padding: 3rem;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 4rem;
    color: white;
    box-shadow: 0 20px 40px rgba(34, 197, 94, 0.2);
  }

  .status-indicator.big {
    width: 20px;
    height: 20px;
    background: white;
    border-radius: 50%;
  }

  .pulse {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    animation: pulse-white 2s infinite;
  }

  @keyframes pulse-white {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }
    
    70% {
      transform: scale(1);
      box-shadow: 0 0 0 20px rgba(255, 255, 255, 0);
    }
    
    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
    }
  }

  .status-text h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .systems-grid {
    display: flex;
    flex-direction: column;
    gap: 1px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: 4rem;
  }

  .system-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: var(--bg-dark);
  }

  .system-name {
    font-weight: 500;
    color: var(--text-primary);
  }

  .status-badge {
    font-size: 0.85rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
  }

  .status-badge.operational {
    color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
  }

  .incident-history h2 {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .incident-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .incident-day h4 {
    font-size: 1rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .no-incidents {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  .incident-title.resolved {
    color: #f59e0b;
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }

  .incident-desc {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
  }
</style>
