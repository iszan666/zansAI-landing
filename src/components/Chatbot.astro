<script>
  const toggleBtn = document.getElementById('chatToggle');
  const closeBtn = document.getElementById('chatClose');
  const chatWindow = document.getElementById('chatWindow');
  const chatForm = document.getElementById('chatForm');
  const chatInput = document.getElementById('chatInput');
  const messagesContainer = document.getElementById('chatMessages');

  let isOpen = false;

  function toggleChat() {
    isOpen = !isOpen;
    chatWindow.classList.toggle('active', isOpen);
    toggleBtn.classList.toggle('active', isOpen);
    if (isOpen) {
      setTimeout(() => chatInput.focus(), 300);
    }
  }

  toggleBtn?.addEventListener('click', toggleChat);
  closeBtn?.addEventListener('click', toggleChat);

  // Simulated AI Logic
  const responses = {
    'pricing': "Our pricing plans start at $29/mo for the Professional plan. The Enterprise plan is $99/mo. We also have a free tier!",
    'cost': "Our pricing plans start at $29/mo for the Professional plan. The Enterprise plan is $99/mo. We also have a free tier!",
    'hello': "Hi there! Welcome to ZansAI. Ask me about features, pricing, or support.",
    'hi': "Hi there! Welcome to ZansAI. Ask me about features, pricing, or support.",
    'help': "You can find detailed documentation at /documentation, or contact support at support@zansai.com.",
    'support': "Our support team is available 24/7 for Enterprise customers. For others, check out our Community page!",
    'features': "ZansAI offers unlimited projects, advanced analytics, custom domains, and secure global edge deployment.",
    'deployment': "Deploying is easy! Just push to GitHub or use our CLI.",
    'checkout': "You can upgrade your plan at any time by visiting /pricing or clicking the buttons on the home page.",
    'default': "I'm not sure about that. Could you try asking about pricing, features, or support? Or visit our Help Center."
  };

  function getBotResponse(text) {
    const lowerText = text.toLowerCase();
    for (const [key, value] of Object.entries(responses)) {
      if (lowerText.includes(key)) return value;
    }
    return responses['default'];
  }

  function addMessage(text, sender) {
    const div = document.createElement('div');
    div.className = `message ${sender}`;
    
    const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
    
    div.innerHTML = `
      <div class="message-content">${text}</div>
      <div class="message-time">${time}</div>
    `;
    
    messagesContainer.appendChild(div);
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }

  chatForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const text = chatInput.value.trim();
    if (!text) return;

    // Add user message
    addMessage(text, 'user');
    chatInput.value = '';

    // Simulate typing delay
    setTimeout(() => {
      const response = getBotResponse(text);
      addMessage(response, 'bot');
    }, 1000);
  });
</script>

<style>
  .chatbot-container {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 10000;
    font-family: 'Inter', sans-serif;
  }

  .chat-toggle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--gradient-primary);
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .chat-toggle:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.6);
  }

  .chat-toggle .icon-close {
    display: none;
  }

  .chat-toggle.active .icon-open {
    display: none;
  }

  .chat-toggle.active .icon-close {
    display: block;
  }

  .chat-window {
    position: absolute;
    bottom: 80px;
    right: 0;
    width: 350px;
    height: 500px;
    background: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    backdrop-filter: blur(20px);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transform: translateY(20px) scale(0.95);
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    transform-origin: bottom right;
  }

  .chat-window.active {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: all;
  }

  .chat-header {
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.9), rgba(139, 92, 246, 0.9));
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .bot-avatar {
    font-size: 1.5rem;
    background: rgba(255, 255, 255, 0.2);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .header-info h3 {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
  }

  .status-dot {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .status-dot::before {
    content: '';
    width: 6px;
    height: 6px;
    background: #22c55e;
    border-radius: 50%;
  }

  .close-btn {
    background: none;
    border: none;
    color: white;
    font-size: 1.2rem;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .close-btn:hover {
    opacity: 1;
  }

  .chat-messages {
    flex: 1;
    padding: 1.5rem;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .message {
    max-width: 80%;
    margin-bottom: 0.5rem;
  }

  .message.bot {
    align-self: flex-start;
  }

  .message.user {
    align-self: flex-end;
  }

  .message-content {
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .message.bot .message-content {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    border-top-left-radius: 0.25rem;
  }

  .message.user .message-content {
    background: var(--color-primary);
    color: white;
    border-top-right-radius: 0.25rem;
  }

  .message-time {
    font-size: 0.7rem;
    color: var(--text-muted);
    margin-top: 0.25rem;
    margin-left: 0.5rem;
  }

  .message.user .message-time {
    text-align: right;
    margin-right: 0.5rem;
  }

  .chat-input-area {
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.2);
  }

  #chatForm {
    display: flex;
    gap: 0.75rem;
  }

  #chatInput {
    flex: 1;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2rem;
    padding: 0.75rem 1.25rem;
    color: white;
    font-size: 0.95rem;
    transition: all 0.2s;
  }

  #chatInput:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-primary);
  }

  .send-btn {
    background: var(--color-primary);
    border: none;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
  }

  .send-btn:hover {
    transform: scale(1.05);
    background: var(--color-primary-light);
  }

  .send-btn svg {
    margin-left: -2px; /* Visual center adjustment */
  }

  @media (max-width: 480px) {
    .chatbot-container {
      bottom: 1rem;
      right: 1rem;
    }
    
    .chat-window {
      width: calc(100vw - 2rem);
      bottom: 70px;
    }
  }
</style>
